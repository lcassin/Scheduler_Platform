<Window x:Class="MermaidEditor.NewDocumentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Document" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackgroundBrush}"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- ScrollViewer Style for theme support -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- ScrollBar Style for theme support -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
        </Style>
        
        <Style x:Key="TemplateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ThemePurpleAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select a template to start with:" 
                   Foreground="{DynamicResource ThemeForegroundBrush}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                                <TextBlock Text="Open" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,8,0,4"/>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="OpenExistingFile_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="32" VerticalAlignment="Center" Margin="8,0,20,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Open Existing File" FontWeight="SemiBold"/>
                                            <TextBlock Text="Browse for an existing .mmd or .md file" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                
                                <TextBlock Text="Blank" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="BlankMermaid_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/blank.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Blank Mermaid Diagram" FontWeight="SemiBold"/>
                                            <TextBlock Text="Start with an empty .mmd file" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="BlankMarkdown_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/markdown.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Blank Markdown Document" FontWeight="SemiBold"/>
                                            <TextBlock Text="Start with an empty .md file" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                
                                <TextBlock Text="Flowcharts" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="Flowchart_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/flowchart.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Flowchart" FontWeight="SemiBold"/>
                                            <TextBlock Text="Basic flowchart with nodes and connections" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="FlowchartAdvanced_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/flowchart.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Flowchart (Advanced)" FontWeight="SemiBold"/>
                                            <TextBlock Text="Flowchart with subgraphs, styling, and different node shapes" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                
                                <TextBlock Text="Sequence Diagrams" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="Sequence_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/sequence.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Sequence Diagram" FontWeight="SemiBold"/>
                                            <TextBlock Text="Interactions between participants over time" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                
                                <TextBlock Text="Class Diagrams" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="ClassDiagram_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/class.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Class Diagram" FontWeight="SemiBold"/>
                                            <TextBlock Text="UML class diagram with relationships" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                
                                <TextBlock Text="State Diagrams" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                                <Button Style="{StaticResource TemplateButtonStyle}" Click="StateDiagram_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/TemplateThumbnails/state.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="State Diagram" FontWeight="SemiBold"/>
                                            <TextBlock Text="State machine with transitions" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                
                        <TextBlock Text="Entity Relationship" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="ERDiagram_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/erdiagram.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="ER Diagram" FontWeight="SemiBold"/>
                                    <TextBlock Text="Database entity relationship diagram" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Gantt Charts" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Gantt_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/gantt.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Gantt Chart" FontWeight="SemiBold"/>
                                    <TextBlock Text="Project timeline with tasks and milestones" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Pie Charts" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Pie_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/pie.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Pie Chart" FontWeight="SemiBold"/>
                                    <TextBlock Text="Simple pie chart with percentages" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Mind Maps" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Mindmap_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/mindmap.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Mind Map" FontWeight="SemiBold"/>
                                    <TextBlock Text="Hierarchical mind map for brainstorming" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Timelines" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Timeline_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/timeline.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Timeline" FontWeight="SemiBold"/>
                                    <TextBlock Text="Chronological timeline of events" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Git Graphs" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="GitGraph_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/gitgraph.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Git Graph" FontWeight="SemiBold"/>
                                    <TextBlock Text="Git branch and commit visualization" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="User Journeys" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Journey_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/journey.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="User Journey" FontWeight="SemiBold"/>
                                    <TextBlock Text="User experience journey map" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Quadrant Charts" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Quadrant_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/quadrant.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Quadrant Chart" FontWeight="SemiBold"/>
                                    <TextBlock Text="Four-quadrant analysis chart" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="Requirement Diagrams" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="Requirement_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/requirement.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Requirement Diagram" FontWeight="SemiBold"/>
                                    <TextBlock Text="Requirements traceability and relationships" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                
                        <TextBlock Text="C4 Diagrams" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="12" Margin="4,16,0,4"/>
                        <Button Style="{StaticResource TemplateButtonStyle}" Click="C4_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/TemplateThumbnails/c4.png" Width="48" Height="48" Margin="0,0,12,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="C4 Context Diagram" FontWeight="SemiBold"/>
                                    <TextBlock Text="System context with people, systems, and containers" Foreground="{DynamicResource ThemeDisabledForegroundBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="80" Padding="8,6" Click="Cancel_Click"
                    Background="{DynamicResource ThemeToolbarBackgroundBrush}" 
                    Foreground="{DynamicResource ThemeForegroundBrush}" 
                    BorderBrush="{DynamicResource ThemeBorderBrush}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>

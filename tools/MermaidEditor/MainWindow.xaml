<Window x:Class="MermaidEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:MermaidEditor"
        mc:Ignorable="d"
        Title="Mermaid Editor" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NewCommand}" />
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAsCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="New_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open..." Click="Open_Click" InputGestureText="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="_Save" Click="Save_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." Click="SaveAs_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="E_xport as PNG..." Click="ExportPng_Click"/>
                <MenuItem Header="Export as _SVG..." Click="ExportSvg_Click"/>
                <MenuItem Header="Export as E_MF..." Click="ExportEmf_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Click="ZoomIn_Click" InputGestureText="Ctrl++"/>
                <MenuItem Header="Zoom _Out" Click="ZoomOut_Click" InputGestureText="Ctrl+-"/>
                <MenuItem Header="_Reset Zoom" Click="ResetZoom_Click" InputGestureText="Ctrl+0"/>
                <Separator/>
                <MenuItem Header="_Fit to Window" Click="FitToWindow_Click" InputGestureText="Ctrl+F"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="Mermaid _Syntax Reference" Click="SyntaxHelp_Click"/>
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="1">
            <Button Content="New" Click="New_Click" ToolTip="New (Ctrl+N)" Padding="8,2"/>
            <Button Content="Open" Click="Open_Click" ToolTip="Open (Ctrl+O)" Padding="8,2"/>
            <Button Content="Save" Click="Save_Click" ToolTip="Save (Ctrl+S)" Padding="8,2"/>
            <Separator/>
            <Button Content="Zoom In" Click="ZoomIn_Click" ToolTip="Zoom In (Ctrl++)" Padding="8,2"/>
            <Button Content="Zoom Out" Click="ZoomOut_Click" ToolTip="Zoom Out (Ctrl+-)" Padding="8,2"/>
            <Button Content="Reset" Click="ResetZoom_Click" ToolTip="Reset Zoom (Ctrl+0)" Padding="8,2"/>
            <Button Content="Fit" Click="FitToWindow_Click" ToolTip="Fit to Window (Ctrl+F)" Padding="8,2"/>
            <Separator/>
            <Label Content="Zoom:" VerticalAlignment="Center"/>
            <TextBlock x:Name="ZoomLevelText" Text="100%" VerticalAlignment="Center" Width="50"/>
        </ToolBar>
        
        <!-- Main Content - Split View -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Tabbed Code Editor / File Browser -->
            <TabControl x:Name="LeftPanelTabs" Grid.Column="0" Background="#2D2D30">
                <!-- Code Tab -->
                <TabItem x:Name="CodeTab">
                    <TabItem.Header>
                        <TextBlock x:Name="EditorHeaderText" Text="Code" Padding="8,2"/>
                    </TabItem.Header>
                    <avalon:TextEditor x:Name="CodeEditor" 
                             FontFamily="Consolas"
                             FontSize="14"
                             Background="#1E1E1E"
                             Foreground="#D4D4D4"
                             ShowLineNumbers="True"
                             WordWrap="False"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                
                <!-- Files Tab -->
                <TabItem Header="Files" Padding="8,2">
                    <Grid Background="#1E1E1E">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Path Bar -->
                        <Grid Grid.Row="0" Background="#2D2D30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BrowseFolderButton" Content="..." Grid.Column="0" 
                                    Click="BrowseFolder_Click" ToolTip="Browse for folder"
                                    Padding="8,4" Margin="2"/>
                            <Button x:Name="ParentFolderButton" Content="Up" Grid.Column="1" 
                                    Click="ParentFolder_Click" ToolTip="Go to parent folder"
                                    Padding="8,4" Margin="2"/>
                            <TextBox x:Name="CurrentPathTextBox" Grid.Column="2" 
                                     Background="#3E3E42" Foreground="#D4D4D4" 
                                     BorderThickness="0" Padding="4" Margin="2"
                                     IsReadOnly="True"/>
                        </Grid>
                        
                        <!-- File List -->
                        <ListBox x:Name="FileListBox" Grid.Row="1" 
                                 Background="#1E1E1E" Foreground="#D4D4D4"
                                 BorderThickness="0"
                                 SelectionChanged="FileListBox_SelectionChanged"
                                 MouseDoubleClick="FileListBox_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4,2">
                                        <TextBlock Text="{Binding Icon}" Width="20" FontFamily="Segoe UI Symbol"/>
                                        <TextBlock Text="{Binding Name}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="#3E3E42"
                          Cursor="SizeWE"/>
            
            <!-- Right Panel - Preview -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#2D2D30" Padding="8,4">
                    <TextBlock Text="Preview" Foreground="White" FontWeight="SemiBold"/>
                </Border>
                
                <wv2:WebView2 x:Name="PreviewWebView" 
                              Grid.Row="1"/>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="FilePathText" Text="Untitled"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

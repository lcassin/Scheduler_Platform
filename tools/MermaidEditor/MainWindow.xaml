<Window x:Class="MermaidEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:MermaidEditor"
        mc:Ignorable="d"
        Title="Mermaid Editor" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource ThemeMenuBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <!-- MenuItem Style for top-level menu items -->
        <Style x:Key="TopLevelMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ContentPresenter ContentSource="Header" 
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"/>
                                <Popup x:Name="PART_Popup"
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       Placement="Bottom"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Fade">
                                    <Border Background="{DynamicResource ThemeToolbarBackgroundBrush}"
                                            BorderBrush="{DynamicResource ThemeBorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeDisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- MenuItem Style for submenu items -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="Icon" 
                                                  Content="{TemplateBinding Icon}" 
                                                  ContentSource="Icon"
                                                  VerticalAlignment="Center"
                                                  Width="16" Height="16"
                                                  Margin="0,0,8,0"/>
                                <ContentPresenter Grid.Column="1" 
                                                  ContentSource="Header" 
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                           Text="{TemplateBinding InputGestureText}"
                                           Foreground="{DynamicResource ThemeDisabledForegroundBrush}"
                                           Margin="24,0,0,0"
                                           VerticalAlignment="Center"/>
                                <Path x:Name="SubMenuArrow" 
                                      Grid.Column="3"
                                      Data="M 0 0 L 4 4 L 0 8 Z"
                                      Fill="{DynamicResource ThemeForegroundBrush}"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Visibility="Collapsed"/>
                                <Popup x:Name="PART_Popup"
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       Placement="Right"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Fade">
                                    <Border Background="{DynamicResource ThemeToolbarBackgroundBrush}"
                                            BorderBrush="{DynamicResource ThemeBorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeDisabledForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="True">
                                <Setter TargetName="SubMenuArrow" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Icon" Value="{x:Null}">
                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ContextMenu Style for dark dropdown -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Separator Style -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource ThemeBorderBrush}"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        
        <!-- ToolBar Style -->
        <Style TargetType="ToolBar">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        
        <!-- ToolBar Overflow Button Style -->
        <Style x:Key="{x:Static ToolBar.ToggleButtonStyleKey}" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" 
                                Background="{DynamicResource ThemeToolbarBackgroundBrush}" 
                                SnapsToDevicePixels="True"
                                Padding="4,2">
                            <Path x:Name="Arrow"
                                  Fill="{DynamicResource ThemeForegroundBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="M 0,0 L 4,4 L 8,0 Z"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Arrow" Property="Fill" Value="{DynamicResource ThemeDisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ToolBar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeDisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Status Bar Button Style -->
        <Style x:Key="StatusBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeDisabledForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Slider Track Style (must be defined before ZoomSliderStyle) -->
        <Style x:Key="SliderRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{DynamicResource ThemeSliderTrackBrush}" Height="2" CornerRadius="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Slider Thumb Style (must be defined before ZoomSliderStyle) -->
        <Style x:Key="SliderThumbStyle" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="thumbBorder" 
                                Background="{DynamicResource ThemeSliderThumbBrush}" 
                                Width="8" 
                                Height="14" 
                                CornerRadius="2"
                                BorderThickness="0"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="{DynamicResource ThemeSliderThumbHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="{DynamicResource ThemeSliderThumbHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Zoom Slider Style -->
        <Style x:Key="ZoomSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,1,0"/>
            <Setter Property="Panel.ZIndex" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="tabGrid" Margin="0,0,0,1">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="1,1,1,0"
                                    BorderBrush="Transparent"
                                    CornerRadius="6,6,0,0"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="contentPresenter"
                                                  ContentSource="Header"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="tabGrid" Property="Margin" Value="0,0,1,-1"/>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeTabSelectedBackgroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ThemePurpleAccentBrush}"/>
                                <Setter Property="Panel.ZIndex" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Style for Navigation Dropdown -->
        <Style x:Key="NavigationComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" 
                                                                  Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  Margin="8,4"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="{DynamicResource ThemeForegroundBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="{DynamicResource ThemeToolbarBackgroundBrush}"
                                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                                        BorderThickness="1"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- StatusBar Style -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="{DynamicResource ThemeMenuBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- StatusBarItem Style -->
        <Style TargetType="StatusBarItem">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="Padding" Value="8,2"/>
        </Style>
        
        <!-- GridSplitter Style -->
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="{DynamicResource ThemeBorderBrush}"/>
        </Style>
        
        <!-- TextBox Style for path bar -->
        <Style x:Key="PathTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{DynamicResource ThemeForegroundBrush}"/>
        </Style>
        
        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ScrollBar Thumb Style -->
        <Style x:Key="ScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="rectangle"
                                Background="#686868"
                                CornerRadius="4"
                                Margin="2"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="rectangle" Property="Background" Value="#9E9E9E"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="rectangle" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="14"/>
            <Setter Property="MinWidth" Value="14"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="MinWidth" Value="0"/>
                    <Setter Property="Height" Value="14"/>
                    <Setter Property="MinHeight" Value="14"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Vertical ScrollBar Template -->
        <ControlTemplate x:Key="VerticalScrollBar" TargetType="ScrollBar">
            <Grid Background="{DynamicResource ThemeBackgroundBrush}">
                <Track x:Name="PART_Track" IsDirectionReversed="True">
                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBarThumb}"/>
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>
        
        <!-- Horizontal ScrollBar Template -->
        <ControlTemplate x:Key="HorizontalScrollBar" TargetType="ScrollBar">
            <Grid Background="{DynamicResource ThemeBackgroundBrush}">
                <Track x:Name="PART_Track">
                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBarThumb}"/>
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>
        
        <!-- ScrollViewer Style -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1" Grid.Row="0"
                                       Orientation="Vertical"
                                       Template="{StaticResource VerticalScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                       Grid.Column="0" Grid.Row="1"
                                       Orientation="Horizontal"
                                       Template="{StaticResource HorizontalScrollBar}"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NewCommand}" />
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAsCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+P" Command="{Binding ExportPngCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+G" Command="{Binding ExportSvgCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+E" Command="{Binding ExportEmfCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+W" Command="{Binding ExportWordCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Grid.IsSharedSizeScope="True">
            <MenuItem Header="_File" Style="{StaticResource TopLevelMenuItemStyle}">
                <MenuItem Header="_New" Click="New_Click" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open..." Click="Open_Click" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="RecentFilesMenuItem" Header="_Recent Files">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                    <MenuItem Header="(No recent files)" IsEnabled="False"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Save" Click="Save_Click" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _As..." Click="SaveAs_Click" InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE792;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="ExportPngMenuItem" Header="E_xport as PNG..." Click="ExportPng_Click" InputGestureText="Ctrl+Shift+P">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE91B;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ExportSvgMenuItem" Header="Export as _SVG..." Click="ExportSvg_Click" InputGestureText="Ctrl+Shift+G">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE91B;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ExportEmfMenuItem" Header="Export as E_MF..." Click="ExportEmf_Click" InputGestureText="Ctrl+Shift+E">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE91B;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ExportWordMenuItem" Header="Export as _Word..." Click="ExportWord_Click" InputGestureText="Ctrl+Shift+W">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit" Style="{StaticResource TopLevelMenuItemStyle}">
                <MenuItem x:Name="UndoMenuItem" Header="_Undo" Click="Undo_Click" InputGestureText="Ctrl+Z" IsEnabled="False">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7A7;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="RedoMenuItem" Header="_Redo" Click="Redo_Click" InputGestureText="Ctrl+Y" IsEnabled="False">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7A6;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View" Style="{StaticResource TopLevelMenuItemStyle}">
                <MenuItem Header="Zoom _In" Click="ZoomIn_Click" InputGestureText="Ctrl++">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8A3;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Zoom _Out" Click="ZoomOut_Click" InputGestureText="Ctrl+-">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE71F;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Reset Zoom" Click="ResetZoom_Click" InputGestureText="Ctrl+0">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Fit to Window" Click="FitToWindow_Click" InputGestureText="Ctrl+F">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE9A6;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Theme">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE790;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                    <MenuItem x:Name="ThemeDarkMenuItem" Header="_Dark" Click="ThemeDark_Click" IsCheckable="True" IsChecked="True"/>
                    <MenuItem x:Name="ThemeLightMenuItem" Header="_Light" Click="ThemeLight_Click" IsCheckable="True"/>
                    <MenuItem x:Name="ThemeTwilightMenuItem" Header="_Twilight" Click="ThemeTwilight_Click" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource TopLevelMenuItemStyle}">
                <MenuItem Header="Mermaid _Syntax Reference" Click="SyntaxHelp_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="M_arkdown Reference" Click="MarkdownHelp_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_About" Click="About_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource ThemeMenuBackgroundBrush}" Padding="6">
            <StackPanel Orientation="Horizontal">
                <!-- Main Toolbar -->
                <Border Background="{DynamicResource ThemeToolbarBackgroundBrush}" CornerRadius="4" HorizontalAlignment="Left">
                    <ToolBarTray Background="Transparent">
                        <ToolBar Band="1" BandIndex="1" Background="Transparent">
                        <Button Click="New_Click" ToolTip="New (Ctrl+N)" Style="{StaticResource ToolbarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="New" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Click="Open_Click" ToolTip="Open (Ctrl+O)" Style="{StaticResource ToolbarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Open" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Click="Save_Click" ToolTip="Save (Ctrl+S)" Style="{StaticResource ToolbarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Save" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource ThemeBorderBrush}" Margin="4,4"/>
                    <Button x:Name="UndoButton" Click="Undo_Click" ToolTip="Undo (Ctrl+Z)" Style="{StaticResource ToolbarButtonStyle}" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A7;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Undo" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="RedoButton" Click="Redo_Click" ToolTip="Redo (Ctrl+Y)" Style="{StaticResource ToolbarButtonStyle}" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A6;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Redo" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                        </ToolBar>
                    </ToolBarTray>
                </Border>
                
                <!-- Export Toolbar -->
                <Border Background="{DynamicResource ThemeToolbarBackgroundBrush}" CornerRadius="4" HorizontalAlignment="Left" Margin="6,0,0,0">
                    <ToolBarTray Background="Transparent">
                        <ToolBar Band="1" BandIndex="1" Background="Transparent">
                            <Button x:Name="ExportPngToolbarButton" Click="ExportPng_Click" ToolTip="Export as PNG (Ctrl+Shift+P)" Style="{StaticResource ToolbarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xEB9F;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="PNG" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ExportSvgToolbarButton" Click="ExportSvg_Click" ToolTip="Export as SVG (Ctrl+Shift+G)" Style="{StaticResource ToolbarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="SVG" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ExportEmfToolbarButton" Click="ExportEmf_Click" ToolTip="Export as EMF (Ctrl+Shift+E)" Style="{StaticResource ToolbarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8BA;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="EMF" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ExportWordToolbarButton" Click="ExportWord_Click" ToolTip="Export to Word (Ctrl+Shift+W)" Style="{StaticResource ToolbarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Word" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                </Border>
                
            </StackPanel>
        </Border>
        
        <!-- Main Content - Split View -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Code Editor with Document Tabs -->
            <Grid Grid.Column="0" Background="{DynamicResource ThemeToolbarBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Document Tabs (populated programmatically) with purple accent styling -->
                <Grid Grid.Row="0">
                    <!-- Purple line underneath non-selected tabs -->
                    <Border Background="{DynamicResource ThemeToolbarBackgroundBrush}" BorderBrush="{DynamicResource ThemePurpleAccentBrush}" 
                            BorderThickness="0,0,0,1" Margin="0,0,0,0"/>
                    <ScrollViewer x:Name="DocumentTabScrollViewer" 
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  Background="Transparent">
                        <StackPanel x:Name="DocumentTabsPanel" Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>
                
                <!-- Navigation Dropdown Bar -->
                <ComboBox x:Name="NavigationDropdown" 
                          Grid.Row="1"
                          Style="{StaticResource NavigationComboBoxStyle}"
                          BorderThickness="0,0,0,1"
                          Margin="0,0,0,4"
                          SelectionChanged="NavigationDropdown_SelectionChanged"
                          ToolTip="Jump to section">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}" Foreground="{DynamicResource ThemeForegroundBrush}" Margin="{Binding IndentMargin}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource ThemeToolbarBackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border x:Name="Bd" 
                                                Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
                
                <!-- Code Editor with purple border on right and subtle grey border on bottom -->
                <Border Grid.Row="2" 
                        BorderBrush="{DynamicResource ThemePurpleAccentBrush}" 
                        BorderThickness="0,0,1,0"
                        Background="{DynamicResource ThemeBackgroundBrush}">
                    <Border BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="0,0,0,1">
                        <avalon:TextEditor x:Name="CodeEditor" 
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Background="{DynamicResource ThemeEditorBackgroundBrush}"
                                 Foreground="{DynamicResource ThemeEditorForegroundBrush}"
                                 ShowLineNumbers="True"
                                 WordWrap="False"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </Border>
            </Grid>
            
            <!-- Splitter with grip indicator -->
            <GridSplitter Grid.Column="1" 
                          Width="8" 
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource ThemeBorderBrush}"
                          Cursor="SizeWE">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{DynamicResource ThemeBorderBrush}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="4" Height="4" Fill="{DynamicResource ThemeDisabledForegroundBrush}" Margin="0,2"/>
                                <Ellipse Width="4" Height="4" Fill="{DynamicResource ThemeDisabledForegroundBrush}" Margin="0,2"/>
                                <Ellipse Width="4" Height="4" Fill="{DynamicResource ThemeDisabledForegroundBrush}" Margin="0,2"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>
            
            <!-- Right Panel - Preview -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="{DynamicResource ThemeToolbarBackgroundBrush}" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="PreviewBackButton" Click="PreviewBack_Click" ToolTip="Go Back" 
                                Style="{StaticResource ToolbarButtonStyle}" Padding="4,2" Margin="0,0,4,0"
                                IsEnabled="False">
                            <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                        </Button>
                        <TextBlock Text="&#xE8FF;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="{DynamicResource ThemeForegroundBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Preview" Foreground="{DynamicResource ThemeForegroundBrush}" FontWeight="SemiBold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <wv2:WebView2 x:Name="PreviewWebView" 
                              Grid.Row="1"/>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="#7d7d7d"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="FilePathText" Text="Untitled" Foreground="#7d7d7d"/>
            </StatusBarItem>
            <!-- Spacer to push zoom controls to the right -->
            <StatusBarItem HorizontalAlignment="Right" DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Fit to Window button -->
                    <Button x:Name="FitButton" Click="FitToWindow_Click" ToolTip="Fit to Window (Ctrl+F)" 
                            Style="{StaticResource StatusBarButtonStyle}" Margin="0,0,8,0">
                        <TextBlock Text="&#xE9A6;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#7d7d7d" VerticalAlignment="Center"/>
                    </Button>
                    <Separator/>
                    <!-- Zoom Out button -->
                    <Button x:Name="ZoomOutButton" Click="ZoomOut_Click" ToolTip="Zoom Out (Ctrl+-)" 
                            Style="{StaticResource StatusBarButtonStyle}" Margin="4,0,0,0">
                        <TextBlock Text="-" FontSize="14" FontWeight="Bold" Foreground="#7d7d7d" VerticalAlignment="Center"/>
                    </Button>
                    <!-- Zoom Slider -->
                    <Slider x:Name="ZoomSlider" 
                            Width="100" 
                            Minimum="10" 
                            Maximum="500" 
                            Value="100"
                            VerticalAlignment="Center"
                            Margin="4,0"
                            Style="{StaticResource ZoomSliderStyle}"
                            ValueChanged="ZoomSlider_ValueChanged"
                            ToolTip="Zoom Level"/>
                    <!-- Zoom In button -->
                    <Button x:Name="ZoomInButton" Click="ZoomIn_Click" ToolTip="Zoom In (Ctrl++)" 
                            Style="{StaticResource StatusBarButtonStyle}" Margin="0,0,4,0">
                        <TextBlock Text="+" FontSize="14" FontWeight="Bold" Foreground="#7d7d7d" VerticalAlignment="Center"/>
                    </Button>
                    <!-- Zoom percentage display -->
                    <TextBlock x:Name="ZoomLevelText" Text="100%" Foreground="#7d7d7d" VerticalAlignment="Center" Width="45" TextAlignment="Right" Margin="4,0,8,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

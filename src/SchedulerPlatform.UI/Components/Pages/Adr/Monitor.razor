    private async Task CheckStatusesOnly()
    {
        _isCheckingStatuses = true;
        StateHasChanged();

        try
        {
            var result = await AdrService.CheckStatusesAsync();
            Snackbar.Add($"Status check complete! {result.JobsCompleted} completed, {result.JobsNeedingReview} need review", Severity.Success);
            

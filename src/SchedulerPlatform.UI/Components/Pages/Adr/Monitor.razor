        }
    }

    private async Task StartOrchestration()
    {
        _isStarting = true;
        StateHasChanged();

        try
        {
            var response = await AdrService.StartBackgroundOrchestrationAsync();
            Snackbar.Add($"Orchestration started! Request ID: {response.RequestId[..8]}...", Severity.Success);
            

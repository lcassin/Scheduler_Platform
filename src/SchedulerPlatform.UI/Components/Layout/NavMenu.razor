@using SchedulerPlatform.UI.Services
@inject IPermissionService PermissionService
@inject AuthenticationStateProvider AuthenticationStateProvider
@implements IDisposable

<MudNavMenu>
    <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Inherit" Match="NavLinkMatch.All">Dashboard</MudNavLink>
    <MudNavLink Href="/schedules" Icon="@Icons.Material.Filled.Schedule" Match="NavLinkMatch.All">Schedules</MudNavLink>
    <MudNavLink Href="/schedules/missed" Icon="@Icons.Material.Filled.Warning">Missed Schedules</MudNavLink>
    <MudNavLink Href="/calendar" Icon="@Icons.Material.Filled.CalendarMonth">Calendar</MudNavLink>
    <MudNavLink Href="/executions" Icon="@Icons.Material.Filled.History">Schedule Executions</MudNavLink>
    
        <MudNavGroup Title="ADR" Icon="@Icons.Material.Filled.CloudDownload" Expanded="false">
            <MudNavLink Href="/adr/accounts" Icon="@Icons.Material.Filled.AccountBalance">Accounts</MudNavLink>
            <MudNavLink Href="/adr/jobs" Icon="@Icons.Material.Filled.Work">Jobs</MudNavLink>
            <MudNavLink Href="/adr/missing-accounts" Icon="@Icons.Material.Filled.Warning">Missing Accounts</MudNavLink>
        </MudNavGroup>
    
    @if (_canManageUsers)
    {
        <MudNavGroup Title="Admin" Icon="@Icons.Material.Filled.AdminPanelSettings" Expanded="false">
            <MudNavLink Href="/admin/users" Icon="@Icons.Material.Filled.People">User Management</MudNavLink>
        </MudNavGroup>
    }
</MudNavMenu>

@code {
    private bool _canManageUsers = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPermissionsAsync();
        AuthenticationStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async Task LoadPermissionsAsync()
    {
        _canManageUsers = await PermissionService.CanReadAsync("users:manage");
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        await LoadPermissionsAsync();
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AuthenticationStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}


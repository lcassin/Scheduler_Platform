@page
@model SchedulerPlatform.IdentityServer.Pages.ChangePassword.Index

<div class="login-page">
    <div class="lead">
        <h1>Change Password</h1>
        <p>You must change your password to continue</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="card">
                <div class="card-header">
                    <h2>Set New Password</h2>
                </div>

                <div class="card-body">
                    <form asp-page="/Account/ChangePassword/Index" method="post">
                        <input type="hidden" asp-for="Input.UserId" />
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.CurrentPassword"></label>
                            <input type="password" class="form-control" placeholder="Current Password" asp-for="Input.CurrentPassword" autocomplete="current-password" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.NewPassword"></label>
                            <input type="password" class="form-control" placeholder="New Password" asp-for="Input.NewPassword" autocomplete="new-password">
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input type="password" class="form-control" placeholder="Confirm New Password" asp-for="Input.ConfirmPassword" autocomplete="new-password">
                        </div>

                        <div class="alert alert-info">
                            <strong>Password Requirements:</strong>
                            <ul>
                                <li>Minimum 16 characters</li>
                                <li>At least 2 special characters</li>
                                <li>At least 3 numbers</li>
                                <li>At least 1 uppercase letter</li>
                                <li>Cannot reuse last 10 passwords</li>
                            </ul>
                        </div>

                        <button class="btn btn-primary" type="submit">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=SchedulerPlatform;Integrated Security=true;TrustServerCertificate=True;",
    "IdentityConnection": "Server=localhost;Database=SchedulerPlatform_Identity;Integrated Security=true;TrustServerCertificate=True;"
  },
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Audience": "scheduler-api"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:7299"
    ]
  },
  "Clients": {
    "UI": {
      "BaseUrl": "https://localhost:7299",
      "AdditionalRedirectUris": ""
    },
    "API": {
      "BaseUrl": "https://localhost:7008",
      "AdditionalSwaggerRedirectUris": "",
      "AdditionalCorsOrigins": ""
    },
    "Blazor": {
      "ClientSecret": "secret"
    },
    "ServiceAccount": {
      "ClientSecret": "dev-secret-change-in-production"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/identity-server-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
    "KeyVault": {
      "VaultUri": ""
    },
    "AzureAd": {
      "TenantId": "08717c9a-7042-4ddf-b86a-e0a500d32cde",
      "ClientId": "",
      "ClientSecret": ""
    },
    "IdentityServer": {
    "CertificateInfo": {
      "StorePath": "Certificates",
      "FileName": "identity-server.pfx",
      "Password": "YourStrongPasswordHere"
    },
    "ExternalLogin": {
      "Google": {
        "Enabled": false,
        "ClientId": "",
        "ClientSecret": ""
      },
      "Microsoft": {
        "Enabled": false,
        "ClientId": "",
        "ClientSecret": ""
      }
    }
  }
}

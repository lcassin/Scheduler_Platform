{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Quartz": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=SchedulerPlatform;Integrated Security=true;TrustServerCertificate=True;",
    "QuartzConnection": "Server=localhost;Database=SchedulerPlatform;Integrated Security=true;TrustServerCertificate=True;"
  },
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Audience": "scheduler-api",
    "RequireHttpsMetadata": false
  },
  "SchedulerSettings": {
    "StartupRecovery": {
      "Enabled": true,
      "GracePeriodMinutes": 10,
      "DelaySeconds": 0
    },
    "MissedScheduleHandling": {
      "EnableAutoFire": true,
      "MissedScheduleWindowDays": 1,
      "EnableInDevelopment": true,
      "ThrottlePerSecond": 50
    }
  }
}
